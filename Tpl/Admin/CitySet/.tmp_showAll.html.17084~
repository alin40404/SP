<script type="text/javascript">

    	pageClickByData( ".<{$pref}>_page",{pid:"<{$prid}>",pname:"<{$pname}>"}, "<{$replaceId}>", host + "g=<{$group}>&m=<{$module}>&a=showAll");
    	var edit = ".<{$pref}>_edit.btn.btn-mini.btn-info";
    	mutilBtn(edit, host + "g=<{$group}>&m=<{$module}>&a=editByName", {p : "<{$pgInfo['nowPage']}>"}, "<{$replaceId}>");
    	var del = ".<{$pref}>_delete.btn.btn-mini.btn-warning";
    	mutilDelBtn(del, "<{$pref}>_to_delete", host+ "g=<{$group}>&m=<{$module}>&a=deleteById", {p :  "<{$pgInfo['nowPage']}>"}, "<{$replaceId}>");
    
    	allChoose("<{$pref}>_check_all", "<{$pref}>_checkbox");
    	invertChoose("<{$pref}>_check_invert", "<{$pref}>_checkbox");
    	mutilSave("<{$pref}>_saveAll", "<{$pref}>_checkbox", "<{$pref}>_alert_checkbox_choose", host+ "g=<{$group}>&m=<{$module}>&a=editAll", {p :  "<{$pgInfo['nowPage']}>"}, "<{$replaceId}>");
    
    	mutilDel("<{$pref}>_deleteAll", "<{$pref}>_checkbox", "<{$pref}>_alert_checkbox_choose","<{$pref}>_deleteAllModal", "<{$pref}>_to_deleteAll", host+ "g=<{$group}>&m=<{$module}>&a=deleteAll", {p :  "<{$pgInfo['nowPage']}>"}, "<{$replaceId}>");
    	
    	 //添加商品名称
        singleBtn("<{$pref}>_btnAdd", "<{$pref}>_inputAdd", host + "g=<{$group}>&m=<{$module}>&a=addByName", {p :  "<{$pgInfo['nowPage']}>",pid:"<{$prid}>"}, "<{$replaceId}>");
 
$("select[name='<{$pref}>_prvSelect']").change(function(){
	var str=this.value;
	var arr=str.split("_");
	var name=arr[0]
	var id=arr[1];
	
	var url= host + "g=<{$group}>&m=<{$module}>&a=showAll";
	ajaxRequest("post", url, {pid:id,pname:name}, "",  "#<{$replaceId}>");
})


</script>